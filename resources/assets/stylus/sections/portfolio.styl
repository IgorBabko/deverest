.Portfolio
    background: black

    &__button
        border-color: white
        color: white
        transition: all 0.3s ease-in-out

        &:hover
            color: #f9431a //#e82c3a
            background: white
            border-color: /*#e82c3a*/ #f9431a !important

    h2
        margin: 0
        padding: 60px 0
        text-align: center
        color: white

    img
        width: 100%

    &__overlay
        display: flex
        justify-content: center
        align-items: center
        width: 100%
        height: 100%
        position: absolute
        top: 0
        left: 0
        background: none
        transition: all 0.3s ease-in-out
        flex-direction: column

        img
            max-width: 96px

        button
            margin-top: 20px
            border-width: 1px

        & > *
            opacity: 0
            transition: all 0.2s ease-in-out

        &:hover
            background: rgba(6, 63, 150, 0.9) // rgba(249, 67, 26, 0.9) //rgba(232, 44, 58, 0.9)

            & > *
                opacity: 1
            
    &__gallery
        .Portfolio__link
            display: block
            padding: 0
            
            &:hover,
            &:active,
            &:focus
                outline: none

